{
  // 🚫 Không format khi lưu — chỉ khi bạn click phải chọn Format Document
  "editor.formatOnSave": false,

  // 🔹 Cấu hình formatter cho Blade
  // Ctrl+Shift+X => cài đặt shufo.vscode-blade-formatter
  "[blade]": {
    "editor.defaultFormatter": "shufo.vscode-blade-formatter"
  },

  // 🔹 Cấu hình formatter cho PHP
  // Ctrl+Shift+X => cài đặt PHP Intelephense (by bmewburn)
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },

  // Nhận diện file .blade.php
  "files.associations": {
    "*.blade.php": "blade"
  }
}
